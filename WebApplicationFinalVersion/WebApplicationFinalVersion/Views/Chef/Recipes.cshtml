                                <nav>
                                    <ul id="navigation">
                                        <li><a asp-action="Index" class="nav-link">home</a></li>
                                        <li><a href="#" class="nav-link">about</a></li>
                                        <li><a asp-action="Recipes" class="nav-link">Recipes</a></li>
                                        <li class="has-submenu">
                                            <a asp-action="RequestedRecipes" class="nav-link">RequestedRecipes <i class="ti-angle-down"></i></a>
                                        </li>
                                        <li><a asp-action="MakeRecipe" class="nav-link">Make Recipe</a></li>
                                    </ul>
                                </nav>
