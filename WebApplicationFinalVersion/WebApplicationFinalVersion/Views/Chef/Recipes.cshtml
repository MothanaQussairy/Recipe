    <!-- bradcam_area  -->
    <div class="bradcam_area bradcam_bg_1">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="bradcam_text text-center">
                        <h3>Chicken Recipes</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /bradcam_area  -->
    <!-- recepie_area_start  -->
    <div class="recepie_area plus_padding">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.Status!=null && item.Status.ToLower() == "wating") continue;
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="single_recepie text-center">
                            <div class="recepie_thumb">
                                <img src=@Url.Content("~/Image/" + item.Imagepath) asp-append-version="true" />
                            </div>
                            <h3>@item.Title</h3>
                            <span>@item.Creationdate</span>
                            @*<a asp-action="Create" asp-controller="Reciperequests"  class="line_btn">Request Recipe</a>*@
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
    <!-- /recepie_area_start  -->
    <!-- latest_trand     -->
    <div class="latest_trand_area">


        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div id="ssearch" class="trand_info text-center">
                        <p>Thousands of recipes are waiting to be watched</p>
                        <h3>Discover latest trending recipes</h3>
                        <form method="post" action="/Customer/SearchByName">
                            <div class="mt-10">
                                <input type="text" name="recipeName" placeholder="Recipe Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Recipe Name'" required class="single-input centered-input" style="width:350px">
                            </div>
                            <button class="genric-btn success" type="submit">Search</button>
                        </form>

                        @*<a href="#" class="boxed-btn3">View all Recipes</a>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ latest_trand     -->
