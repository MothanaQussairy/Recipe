                <div class="col-xl-6 col-md-6">
                    <div class="comment-form">
                        <h4>Request Recipe</h4>
                        <form enctype="multipart/form-data" asp-controller="Chef" asp-action="MakeRecipec" method="post" class="form-contact comment_form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <input class="form-control" name="Title" id="Ingredients" type="text" placeholder="Ingredients">
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="Creationdate" id="Creationdate" type="date">
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Recipe Name</label>
                                <select class="form-control" name="Recipeid" asp-items="ViewBag.Recipeid"></select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Category Name</label>
                                <select class="form-control" name="CategoryName" asp-items="ViewBag.CategoryId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageFile" class="control-label">Image</label>
                                <input asp-for="ImageFile" class="line_btn" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="form-group">
                                    <button type="submit" class="button button-contactForm btn_1 boxed-btn">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
